<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:FormPanel ui:field="form" method="POST">
            <g:VerticalPanel spacing="10">
                <g:HorizontalPanel>
                    <g:Label text="Тема:" width="100px"/>
                    <g:TextBox name="name" ui:field="nameText"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Автор:" width="100px"/>
                    <g:TextBox name="owner" ui:field="ownerText"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Исполнитель:" width="100px"/>
                    <g:TextBox name="executer" ui:field="executerText"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Описание:" width="100px" height="50px"/>
                    <g:TextArea name="summary" ui:field="summaryText"/>
                </g:HorizontalPanel>
                <g:Button ui:field="btnSubmit">Сохранить</g:Button>
                <g:Button ui:field="btnClose">Закрыть</g:Button>
            </g:VerticalPanel>
        </g:FormPanel>
    </g:DecoratorPanel>
</ui:UiBinder>